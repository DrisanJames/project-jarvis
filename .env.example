# ============================================
# IGNITE ESP Platform - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# All values are dynamically loaded - no hardcoded IDs

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development, staging, production
DEV_MODE=true            # Enable dev mode fallbacks

# ============================================
# Database
# ============================================
DATABASE_URL=postgres://ignite:your_password@localhost:5432/ignite?sslmode=disable

# ============================================
# Redis
# ============================================
REDIS_URL=redis://localhost:6379

# ============================================
# Server
# ============================================
PORT=8080
HOST=0.0.0.0

# ============================================
# Authentication
# ============================================
AUTH_ENABLED=false
JWT_SECRET=your-jwt-secret-min-32-chars
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# AWS Configuration
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=ignite-email-assets

# ============================================
# ESP Providers
# ============================================
# SparkPost
SPARKPOST_API_KEY=
SPARKPOST_BASE_URL=https://api.sparkpost.com

# Mailgun
MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# SendGrid
SENDGRID_API_KEY=

# AWS SES
SES_REGION=us-east-1

# ============================================
# AI/LLM Configuration
# ============================================
AI_ENABLED=true
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# ============================================
# Tracking & Analytics
# ============================================
TRACKING_ENABLED=true
TRACKING_DOMAIN=track.yourdomain.com
IMAGE_CDN_DOMAIN=images.yourdomain.com

# ============================================
# Rate Limits (per organization)
# ============================================
DEFAULT_HOURLY_LIMIT=10000
DEFAULT_DAILY_LIMIT=100000

# ============================================
# Webhook Security
# ============================================
WEBHOOK_SECRET=your-webhook-secret

# ============================================
# Default Sender (used when no profile specified)
# ============================================
DEFAULT_FROM_NAME=
DEFAULT_FROM_EMAIL=
DEFAULT_REPLY_EMAIL=

# ============================================
# IPXO IP Broker Integration
# ============================================
IPXO_CLIENT_ID=
IPXO_SECRET_KEY=
IPXO_COMPANY_UUID=

# ============================================
# Vultr Bare Metal Integration
# ============================================
VULTR_API_KEY=

# ============================================
# Logging
# ============================================
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json # json, text
